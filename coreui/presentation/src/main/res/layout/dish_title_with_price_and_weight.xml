<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:theme="@style/Theme.Foodie">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dishTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        app:emojiCompatEnabled="?attr/emojiCompatEnabled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Рыба с овощами и рисом" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dishPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/default_dishPrice"
        android:textAppearance="?attr/textAppearanceBody1"
        app:emojiCompatEnabled="?attr/emojiCompatEnabled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dishTitle" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dishWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/default_dishWeight"
        android:textAppearance="?attr/textAppearanceBody2"
        app:emojiCompatEnabled="?attr/emojiCompatEnabled"
        app:layout_constraintBottom_toBottomOf="@id/dishPrice"
        app:layout_constraintStart_toEndOf="@+id/dishPrice"
        app:layout_constraintTop_toTopOf="@id/dishPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>