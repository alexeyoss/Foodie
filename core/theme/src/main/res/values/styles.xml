<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Common styles-->
    <style name="small_btn_common_style" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="iconPadding">@dimen/zero_padding</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="large_btn_common_style" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">@dimen/specific_padding</item>
        <item name="android:paddingBottom">@dimen/specific_padding</item>
        <item name="cornerRadius">@dimen/defaultCornerRadius</item>
    </style>

    <!--Main Activity-->
    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/sfp_medium</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Categories Fragment -->
    <style name="ItemCategoriesFragmentTextStyle">
        <item name="android:fontFamily">@font/sfp_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <!--Dishes Fragment-->
    <style name="ItemDishesFragmentTextStyle">
        <item name="android:fontFamily">@font/sfp_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <!--Dish Details Dialog Fragment-->
    <style name="TitleDishDetailFragmentTextStyle">
        <item name="android:fontFamily">@font/sfp_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PriceDishDetailFragmentTextStyle">
        <item name="android:fontFamily">@font/sfp_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="WeightDishDetailFragmentTextStyle">
        <item name="android:fontFamily">@font/sfp_regular</item>
        <item name="android:textColor">@color/weightTextColor</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DishDescriptionDetailFragmentTextStyle">
        <item name="android:fontFamily">@font/sfp_regular</item>
        <item name="android:textColor">@color/descriptionTextColor</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <!--Quantity Selector-->
    <style name="shapeAppearanceOverlay">
        <item name="cornerSize">@dimen/defaultCornerRadius</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!--Toolbar Style-->
    <style name="ToolbarTitleTextStyle">
        <item name="titleMarginStart">@dimen/extra_small_margin</item>
        <item name="fontFamily">@font/sfp_medium</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="ToolbarSubTitleTextStyle">
        <item name="fontFamily">@font/sfp_regular</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="subtitleTextColor">@color/subTitle</item>
    </style>

    <style name="FiltersTextStyle">
        <item name="fontFamily">@font/sfp_regular</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
    </style>


</resources>