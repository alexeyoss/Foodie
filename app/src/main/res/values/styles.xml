<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Main Activity-->
    <style name="BottomNavigationViewTextAppearance">
        <item name="android:fontFamily">@font/sfp_medium</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Categories Fragment -->
    <style name="ItemCategoriesFragmentTextStyle">
        <item name="android:fontFamily">@font/sfp_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <!--Dishes Fragment-->
    <style name="ItemDishesFragmentTextStyle">
        <item name="android:fontFamily">@font/sfp_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <!--Dish Details Dialog Fragment-->
    <style name="TitleDishDetailFragmentTextStyle">
        <item name="android:fontFamily">@font/sfp_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PriceDishDetailFragmentTextStyle">
        <item name="android:fontFamily">@font/sfp_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="WeightDishDetailFragmentTextStyle">
        <item name="android:fontFamily">@font/sfp_regular</item>
        <item name="android:textColor">@color/weightTextColor</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DishDescriptionDetailFragmentTextStyle">
        <item name="android:fontFamily">@font/sfp_regular</item>
        <item name="android:textColor">@color/descriptionTextColor</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="btn_style" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

</resources>