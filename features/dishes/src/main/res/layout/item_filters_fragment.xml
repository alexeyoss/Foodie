<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/backgroundItem"
        app:cardCornerRadius="@dimen/defaultCornerRadius"
        app:cardElevation="@dimen/zeroCardElevation"
        tools:layout_marginEnd="@dimen/small_margin">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/filterText"
            style="@style/FiltersTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/large_padding"
            android:paddingVertical="@dimen/small_padding"
            tools:text="@tools:sample/cities" />


    </androidx.cardview.widget.CardView>

</FrameLayout>
