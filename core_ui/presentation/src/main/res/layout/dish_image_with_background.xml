<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:theme="@style/Theme.Foodie">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardImageView"
        style="?attr/shapeAppearanceMediumComponent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/large_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/medium_margin"
            android:contentDescription="@string/dishes_picture_desc"
            android:scaleType="fitCenter"
            tools:src="@drawable/default_photo" />

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>